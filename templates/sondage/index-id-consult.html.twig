{% block body %}
    <main>
        <div class="title-container">
            <h1>{{ sondage.question }}</h1>
        </div>
        <p>{{ sondage.date|date('d-m-Y') }}</p>
        <div id="result-container">
            <div id="users">
                <p>Utilisateurs</p>
                {% for vote in votes %}
